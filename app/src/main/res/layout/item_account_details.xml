<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/head_img"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:src="@drawable/bg_base_cycle"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tv_account"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="TYUIOIUYTYUIOPOIUY"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:singleLine="true"
        android:layout_marginLeft="5dp"
        app:layout_constraintTop_toTopOf="@id/head_img"
        app:layout_constraintStart_toEndOf="@id/head_img"
        app:layout_constraintEnd_toStartOf="@id/tv_money"
        app:layout_constraintBottom_toTopOf="@id/tv_time"/>

    <TextView
        android:id="@+id/tv_money"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="8989.0"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:gravity="right"
        android:layout_marginRight="20dp"
        app:layout_constraintTop_toTopOf="@id/head_img"
        app:layout_constraintBottom_toTopOf="@id/tv_mark"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tv_account"/>

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="1月12日"
        android:textSize="13sp"
        android:layout_marginLeft="5dp"
        app:layout_constraintTop_toBottomOf="@id/tv_account"
        app:layout_constraintBottom_toBottomOf="@id/head_img"
        app:layout_constraintStart_toEndOf="@id/head_img"
        app:layout_constraintEnd_toStartOf="@id/tv_mark"/>

    <TextView
        android:id="@+id/tv_mark"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="提现"
        android:gravity="right"
        android:layout_marginRight="20dp"
        android:textSize="13sp"
        app:layout_constraintTop_toBottomOf="@id/tv_money"
        app:layout_constraintBottom_toBottomOf="@id/head_img"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tv_time"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/base_color"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>